    , deepseq
    , ghcjs-base
    , hspec == 2.*
    , http-api-data
    , http-client
    , http-media
    , http-types
    , HUnit
    , mtl
    , network >= 2.6
    , QuickCheck >= 2.7
    , servant
    , servant-client-ghcjs
